<div class="container">
  <div class="row">
    <h1>我的好友</h1>
    <%= link_to "回上頁", user_path(current_user) %>
    <hr>
      <% @friend_list.each do |friend| %>
        <div class="col-md-3 col-sm-4 col-xs-6  text-center user-item">
          <img src="http://via.placeholder.com/150x150" alt="placeholder" class="img-responsive center-block">
          <h4 class="text-center"><%= link_to friend.name, user_path(friend) %></h4>
          <%= render partial: "shared/follow", locals: {user: friend} %>
          <%= render partial: "shared/friend", locals: {user: friend} %>
        </div>      
      <% end %>
  </div>
</div>