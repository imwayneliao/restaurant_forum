<div class="container">
  <div class="row">

    <div class="col-md-4">
      <%= image_tag @user.avatar, class: "img-responsive center-block", width: '600px'%>
    </div>
    <div class="col-md-8">
      <h1><%= @user.name %></h1>
      <strong><%= @user.email %></strong>
      <p><%= simple_format @user.intro %></p>
      <% if current_user == @user %> 
        <%= link_to '修改', edit_user_path(@user), class: "btn btn-primary" %>
      <% end %>
    </div>
    <hr>
    <% @commented_restaurants.each do |restaurant| %>
      <div class="col-sm-6 col-md-4">
        <div class="restaurant-item">
          <%= image_tag restaurant.image, class: "img-responsive center-block" %>
          <div class="caption">
            <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
