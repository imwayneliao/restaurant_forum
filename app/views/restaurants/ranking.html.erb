<div class="container">
  <ul class="nav nav-tabs">
    <li role="presentation"><%= link_to "首頁", root_path %></li>
    <li role="presentation"><%= link_to "最新動態", feeds_restaurants_path %></li>
    <li role="presentation" class="active"><%= link_to "Top10人氣餐廳", ranking_restaurants_path %></li>
    <li role="presentation"><%= link_to "美食達人", users_path %></li>
  </ul>
  <div class="container">
    <div class="row">
      <h1>Top 10 人氣餐廳 <small>（收藏數最高）</small> </h1>
      <hr>
      <% @top_restaurants.each do |restaurant| %>
        <div class="container">
          <div class="col-md-3 col-sm-4 col-xs-12">
            <%= image_tag restaurant.image, class:"img-responsive"%>
          </div>
          <div class="col-md-9 col-sm-8 col-xs-12">
            <div class="well">
              <h4><%= restaurant.name %></h4>
              <ul class="list-unstyled">
                <li><strong>收藏數：</strong><%= restaurant.favorites_count %></li>
                <li><strong>餐廳介紹：</strong><%= truncate(restaurant.description, length: 140) %></li>
              </ul>
              <%= link_to "show", restaurant_path(restaurant), class:"btn btn-primary" %>
              <%= render partial: "shared/favorite", locals: {restaurant: restaurant} %>
            </div>
          </div>
        </div>
        <br>
      <% end %>
    </div>
  </div>
</div>
